{
  "expo": {
    "name": "Digital Ink Recognition App",
    "slug": "digital-ink-recognition-app",
    "version": "1.0.0",
    "owner": "aryanharsh912005",
    "orientation": "landscape",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "scheme": "com.anonymous.digitalinkrecognitionapp",
    "extra": {
      "MONGODB_URI": "mongodb://localhost:27017/sld_app",
      "JWT_SECRET": "your-super-secret-jwt-key-change-this-in-production"
    },
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.digitalinkrecognitionapp",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs microphone access for voice recognition and note-taking.",
        "NSSpeechRecognitionUsageDescription": "This app needs speech recognition to convert your voice to text."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.anonymous.digitalinkrecognitionapp",
      "scheme": "com.anonymous.digitalinkrecognitionapp",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser",
      [
        "@react-native-voice/voice",
        {
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone for voice recognition.",
          "speechRecognitionPermission": "Allow $(PRODUCT_NAME) to recognize speech for voice-to-text."
        }
      ]
    ]
  }
}
